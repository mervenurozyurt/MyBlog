
@model MyBlog.DTO.BlogDTO
@{
    var categories = ViewBag.Categories as List<MyBlog.DTO.CategoryDTO>;
    var rs = ViewBag.RecordStatuses as List<MyBlog.DTO.RecordStatusDTO>;

}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Bloglar</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Yeni Blog</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form method="post" class="form-horizontal form-label-left" novalidate>
                            <input type="hidden" id="BlogId" value="@Model.BlogId" />
                            <input type="hidden" id="UserId" value="@Model.UserId" />
                            <input type="hidden" İd="IsConfirmed" value="@Model.IsConfirmed" />
                            <input type="hidden" id="ImagePath" value="@Model.ImagePath" />
                            <input type="hidden" id="CreatedDate" value="@Model.CreatedDate" />

                            <p>
                                Blog update bölümüdür.
                            </p>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-6" for="CategoryName">
                                    Başlık <span class="required"></span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <input id="Title" class="form-control col-md-7 col-xs-12" name="Title" value="@Model.Title" placeholder="ss" required="required" type="text">
                                </div>
                            </div>

                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-6" for="CategoryId">
                                    Kategori <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <select class="form-control" name="CategoryId" id="CategoryId">
                                        <option value="">Seçiniz</option>
                                        @foreach (var item in categories)
                                        {
                                            if (Model.CategoryId == item.CategoryId)
                                            {
                                                <option value="@item.CategoryId" selected>@item.CategoryName</option>
                                            }
                                            else
                                            {
                                                <option value="@item.CategoryId">@item.CategoryName</option>
                                            }

                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-6" for="Image">
                                    Blog Resmi <span class="required"></span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <input type="file" id="PhotoFile" value="@Model.ImagePath" class="form-control" >
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-6" for="RecordStatusName">
                                    Kayıt Durumu <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <select class="form-control" name="RecordStatusId" id="RecordStatusId">
                                        <option value="">Seçiniz</option>
                                        @foreach (var item in rs)
                                        {
                                            if (Model.RecordStatusId == item.RecordStatusId)
                                            {
                                                <option value="@item.RecordStatusId" selected>@item.RecordStatusName</option>
                                            }
                                            else
                                            {
                                                <option value="@item.RecordStatusId">@item.RecordStatusName</option>
                                            }
                                        }
                                    </select>
                                </div>

                            </div>

                            <div class="item form-group">

                                <div class="col-md-12 col-sm-6 col-xs-6">
                                    <div id="alerts"></div>
                                    <div class="btn-toolbar editor" data-role="editor-toolbar" data-target="#editor-one">
                                        <div class="btn-group">
                                            <a class="btn dropdown-toggle" data-toggle="dropdown" title="Font"><i class="fa fa-font"></i><b class="caret"></b></a>
                                            <ul class="dropdown-menu"></ul>
                                        </div>
                                        <div class="btn-group">
                                            <a class="btn dropdown-toggle" data-toggle="dropdown" title="Font Size"><i class="fa fa-text-height"></i>&nbsp;<b class="caret"></b></a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a data-edit="fontSize 5">
                                                        <p style="font-size:17px">Huge</p>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a data-edit="fontSize 3">
                                                        <p style="font-size:14px">Normal</p>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a data-edit="fontSize 1">
                                                        <p style="font-size:11px">Small</p>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="btn-group">
                                            <a class="btn" data-edit="bold" title="Bold (Ctrl/Cmd+B)"><i class="fa fa-bold"></i></a>
                                            <a class="btn" data-edit="italic" title="Italic (Ctrl/Cmd+I)"><i class="fa fa-italic"></i></a>
                                            <a class="btn" data-edit="strikethrough" title="Strikethrough"><i class="fa fa-strikethrough"></i></a>
                                            <a class="btn" data-edit="underline" title="Underline (Ctrl/Cmd+U)"><i class="fa fa-underline"></i></a>
                                        </div>
                                        <div class="btn-group">
                                            <a class="btn" data-edit="insertunorderedlist" title="Bullet list"><i class="fa fa-list-ul"></i></a>
                                            <a class="btn" data-edit="insertorderedlist" title="Number list"><i class="fa fa-list-ol"></i></a>
                                            <a class="btn" data-edit="outdent" title="Reduce indent (Shift+Tab)"><i class="fa fa-dedent"></i></a>
                                            <a class="btn" data-edit="indent" title="Indent (Tab)"><i class="fa fa-indent"></i></a>
                                        </div>
                                        <div class="btn-group">
                                            <a class="btn" data-edit="justifyleft" title="Align Left (Ctrl/Cmd+L)"><i class="fa fa-align-left"></i></a>
                                            <a class="btn" data-edit="justifycenter" title="Center (Ctrl/Cmd+E)"><i class="fa fa-align-center"></i></a>
                                            <a class="btn" data-edit="justifyright" title="Align Right (Ctrl/Cmd+R)"><i class="fa fa-align-right"></i></a>
                                            <a class="btn" data-edit="justifyfull" title="Justify (Ctrl/Cmd+J)"><i class="fa fa-align-justify"></i></a>
                                        </div>
                                        <div class="btn-group">
                                            <a class="btn dropdown-toggle" data-toggle="dropdown" title="Hyperlink"><i class="fa fa-link"></i></a>
                                            <div class="dropdown-menu input-append">
                                                <input class="span2" placeholder="URL" type="text" data-edit="createLink" />
                                                <button class="btn" type="button">Add</button>
                                            </div>
                                            <a class="btn" data-edit="unlink" title="Remove Hyperlink"><i class="fa fa-cut"></i></a>
                                        </div>
                                        <div class="btn-group">
                                            <a class="btn" title="Insert picture (or just drag & drop)" id="pictureBtn"><i class="fa fa-picture-o"></i></a>
                                            <input type="file" data-role="magic-overlay" data-target="#pictureBtn" data-edit="insertImage" />
                                        </div>
                                        <div class="btn-group">
                                            <a class="btn" data-edit="undo" title="Undo (Ctrl/Cmd+Z)"><i class="fa fa-undo"></i></a>
                                            <a class="btn" data-edit="redo" title="Redo (Ctrl/Cmd+Y)"><i class="fa fa-repeat"></i></a>
                                        </div>
                                    </div>
                                    <div id="editor-one" name="BlogContent" class="editor-wrapper">@Model.BlogContent</div>
                                    <textarea name="BlogContent" id="descr" style="display:none;"></textarea>
                                </div>

                            </div>

                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-3">
                                    <a class="btn btn-danger" href="/Blog">İptal</a>
                                    <input class="btn btn-success" type="button" name="Edit" value="Kaydet" id="Edit" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
<!-- jQuery -->
<script src="/Content/vendors/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#Edit').click(function () {
            var blog = {
                BlogId: $('#BlogId').val(),
                Title: $('#Title').val(),
                CategoryId: $('#CategoryId').val(),
                BlogContent: $('#editor-one').html(),
                UserId: $('#UserId').val(),
                ImagePath: $('#PhotoFile').val(),
                IsConfirmed: true,
                CreatedDate: $('#CreatedDate').val(),
                RecordStatusId: $('#RecordStatusId').val(),
               
            };

            console.log(blog);

            

            $.ajax({
                url: "http://localhost:1443/api/Blog/Edit",
                type: "POST",
                data: blog,
                success: function (response) {
                    if (response == true) {
                        window.location.href = "/Blog";
                    }
                },
                error: function (err) {
                    console.log(err.responseText);
                    alert("Blog kayıt edilemedi. " + err.responseText);
                }
            });
        });


        $('#PhotoFile').change(function (){


            var formData = new FormData();
            //$('#PhotoFile').files.length //jquery alttaki kavascript kodu ikiside aynı
            var totalFiles = document.getElementById("PhotoFile").files.length;

            for (var i = 0; i < totalFiles; i++) {

                var file = document.getElementById("PhotoFile").files[i];
                console.log(file);

                formData.append("PhotoFile", file);

            }


            $.ajax({
                url: "http://localhost:1443/api/Blog/Upload/@Model.BlogId",
                type: "POST",
                data: formData,
                processData:false,
                contentType:false,
                success: function (response) {
                    console.log(response);
                    if (response == true) {
                        window.location.href = "/Blog";
                    }
                },
                error: function (err) {
                    console.log(err.responseText);
                    alert("Upload hatası " + err.responseText);
                }
            });


        });
      


    });
</script>
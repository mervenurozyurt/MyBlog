        $('#Send').click(function () {
            var message = {
                SenderName: $('#SenderName').val(),
                SenderEmail: $('#SenderEmail').val(),
                MessageContent: $('#MessageContent').val(),
            };

            console.log(message);

            $.ajax({
                url: "http://localhost:1443/api/Message/Contact/",/* /Home/SendMessage*/
                type: "POST",
                data:  message,
                success: function (response) {
                     if(response == true) {
                         console.log(response);
                    $('#Send').text("Mesajınız Gönderildi") ;
                        $('#SenderName').val() = "";
                        $('#SenderEmail').val() = "";
                        $('#MessageContent').val() = "";
                        window.location.href = "/Contact";
                    }
                },
                error: function (err) {
                    console.log(err.responseText);
                    alert("mesaj kayıt edilemedi. " + err.responseText);
                }
            });
        });

    });

</script>